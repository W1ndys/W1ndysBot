# 硅基流动API配置
# 复制此文件为 .env 并填入实际配置

# API基础URL
SIJI_BASE_URL=https://api.siliconflow.cn/v1

# API密钥（必填）
SIJI_API_KEY=your_api_key_here

# 使用的模型名称
SIJI_MODEL_NAME=Qwen/Qwen3-Omni-30B-A3B-Thinking

# 负面情绪判断阈值（0-1之间的浮点数）
NEGATIVE_SENTIMENT_THRESHOLD=0.7

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 是否自动删除负面消息（true/false）
AUTO_DELETE_NEGATIVE_MSG=true

# 是否通知管理员（true/false）
ADMIN_NOTIFICATION=true
